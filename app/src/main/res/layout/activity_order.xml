<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Barra superior con logo y texto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#0E0E0E"
            android:padding="10dp">

            <!-- Logo de la empresa -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vanguard" />

            <!-- Texto de la empresa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vanguard"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Botón de ordenar -->
        <Button
            android:id="@+id/btn_order_by"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFC107"
            android:drawableEnd="@drawable/ic_sort"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Ordenar por"
            android:textColor="#000000" />

        <!-- Sección de pedidos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedidos"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="24dp" />

        <!-- Contenedor de cada pedido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:layout_marginTop="16dp"
            android:background="#E0E0E0"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotulación"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Imagen del pedido -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:background="#FFC107"
                android:padding="4dp"
                android:src="@drawable/otros_ic" />

            <!-- Botón de más detalles -->
            <Button
                android:id="@+id/btn_more_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FFC107"
                android:text="Más detalles"
                android:textColor="#000000" />

            <!-- Fecha de entrega -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fecha de entrega: 8 de Diciembre del 2024"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Botón de ofertas -->
        <Button
            android:id="@+id/btn_offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ofertas"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="24dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>