<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/vanguard"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menu_icon"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- Agenda Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_marginTop="16dp"
        android:background="#EFEFEF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/agenda_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFB40B"
            android:padding="8dp"
            android:text="Agenda"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Calendar View -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="204dp"
            android:layout_marginBottom="20dp"
            android:dateTextAppearance="@style/CustomDateTextAppearance"
            android:weekDayTextAppearance="@style/CustomWeekDayAppearance" />

        <!-- Date Display -->
        <TextView
            android:id="@+id/date_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha seleccionada: "
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Personalization Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ECECEC"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/personalization_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalizacion"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/personalization_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles del pedido"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
