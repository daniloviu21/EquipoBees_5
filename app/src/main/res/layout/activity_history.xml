<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Menú superior -->

    <!-- Botón Historial -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:background="#111820"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vanguard" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Vanguard"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btn_historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FDD535"
        android:text="Historial"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tarjetas -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_historial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tarjeta individual -->
            <!--
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Imagen y textos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Imagen de la tarjeta -->
                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rotulacion" />

                    <!-- Contenedor de textos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Caja para "Datos" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#DDDDDD"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txt_datos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_datos"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                        <!-- Caja para "Especificaciones" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#EEEEEE"
                            android:padding="8dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/txt_especificaciones"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Especificaciones"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_especificaciones"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Imagen de la tarjeta -->
                    <ImageView
                        android:id="@+id/img_anuncios"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/anuncios" />

                    <!-- Contenedor de textos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Caja para "Datos de Anuncios" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#DDDDDD"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txt_datos_anuncios"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_datos_anuncios"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                        <!-- Caja para "Especificaciones de Anuncios" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#EEEEEE"
                            android:padding="8dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/txt_especificaciones_anuncios"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Especificaciones"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_especificaciones_anuncios"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Imagen de la tarjeta -->
                    <ImageView
                        android:id="@+id/img_estructuras2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/estructuras" />

                    <!-- Contenedor de textos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Caja para "Datos de Estructuras" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#DDDDDD"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txt_datos_estructuras2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_datos_estructuras2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                        <!-- Caja para "Especificaciones de Estructuras" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#EEEEEE"
                            android:padding="8dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/txt_especificaciones_estructuras2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Especificaciones"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_especificaciones_estructuras2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Imagen de la tarjeta -->
                    <ImageView
                        android:id="@+id/img_otros"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/otros" />

                    <!-- Contenedor de textos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Caja para "Datos de Otros" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:background="#DDDDDD"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txt_datos_otros"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_datos_otros"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                        <!-- Caja para "Especificaciones de Otros" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#EEEEEE"
                            android:padding="8dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/txt_especificaciones_otros"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Especificaciones"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_especificaciones_otros"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Imagen de la tarjeta -->
                    <ImageView
                        android:id="@+id/img_estructuras"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/estructuras" />

                    <!-- Contenedor de textos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Caja para "Datos de Estructuras" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#DDDDDD"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/txt_datos_estructuras"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Datos"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_datos_estructuras"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                        <!-- Caja para "Especificaciones de Estructuras" -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#EEEEEE"
                            android:padding="8dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/txt_especificaciones_estructuras"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Especificaciones"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageButton
                                android:id="@+id/btn_expand_especificaciones_estructuras"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/ic_editar" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
