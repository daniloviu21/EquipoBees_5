    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Cotiza con nosotros"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UnknownId" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Para realizar una cotización, selecciona el tipo de producto que deseas, e ingresa una breve descripción de lo que necesitas"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="18dp"
        android:paddingTop="10dp"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Imágenes con categorías -->
    <GridLayout
        android:id="@+id/categories_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen de Rotulación -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rotulacion_image"
                android:backgroundTint="#FFC107"
                android:clipToOutline="true"
                android:background="#FFC107"
                android:padding="6dp"
                android:elevation="4dp"
                android:contentDescription="Imagen para la categoría de Rotulación"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotulación"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:gravity="center" />
        </LinearLayout>

        <!-- Imagen de Anuncios -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/anuncios"
                android:backgroundTint="#FFC107"
                android:clipToOutline="true"
                android:background="#FFC107"
                android:padding="6dp"
                android:elevation="4dp"
                android:contentDescription="Imagen para la categoría de Anuncio"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anuncios"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Imagen de Estructuras -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/estructuras"
                android:backgroundTint="#FFC107"
                android:clipToOutline="true"
                android:background="#FFC107"
                android:padding="6dp"
                android:elevation="4dp"
                android:contentDescription="Imagen para la categoría de Estructura"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estructuras"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Imagen de Otro -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/otros"
                android:backgroundTint="#FFC107"
                android:clipToOutline="true"
                android:background="#FFC107"
                android:padding="6dp"
                android:elevation="4dp"
                android:contentDescription="Imagen para la categoría de Otros"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Otro"
                android:textColor="@color/grey"
                android:textSize="12sp"/>
        </LinearLayout>
    </GridLayout>

    <!-- Comentarios del pedido -->
    <EditText
        android:id="@+id/comments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Comentarios del pedido..."
        android:padding="20dp"
        android:textSize="16sp"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/background"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/categories_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <!-- Botón de Enviar
    android:background="@drawable/dialog_holo_light_frame"
    -->
    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Enviar"
        android:backgroundTint="#FFC107"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/comments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
